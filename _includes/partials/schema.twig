{# Schema information: http://www.whitespark.ca/blog/post/62-the-json-ld-markup-guide-to-local-business-schema #}
<script type="application/ld+json">
	{
	  "@context": "http://schema.org",
	  "@type": "LocalBusiness",
	  "name": "{{ site.title }}",
	  "location": {
		"@type": "Place",
		"name": "{{ site.title }}",
		"address": {
		  "@type": "PostalAddress",
		  "streetAddress": "{{ option.address_street }}",
		  "addressLocality": "{{ option.address_city }}",
		  "addressRegion": "{{ option.address_state }}",
		  "postalCode": "{{ option.address_zip }}"
		}
	  },
	  "address": {
		  "@type": "PostalAddress",
		  "streetAddress": "{{ option.address_street }}",
		  "addressLocality": "{{ option.address_city }}",
		  "addressRegion": "{{ option.address_state }}",
		  "postalCode": "{{ option.address_zip }}"
		},
	  "logo": "{{ theme.link }}/img/logo.png",
	  "image": "{{ theme.link }}/img/logo.png",
	  "email": "{{ option.email }}",
	  "sameAs": [
		{% for icon in fn('get_social_media_icons') if icon.link %}
			"{{ icon.link }}"{{ fn('get_social_media_icons')|length == loop.index ? '' : ',' }}
		{% endfor %}
	  ],
	  "hasMap": "Map Link",
	  "additionalType": "Optional Additional Type",
	  "telephone": "{{ option.phone }}",
	  "url": "{{ site.link }}"
	}
</script>
